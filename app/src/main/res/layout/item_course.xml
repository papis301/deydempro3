<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="10dp"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#fff" android:elevation="3dp" android:margin="6dp">

    <TextView android:id="@+id/tvPickup"
        android:text="Pickup address"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvDrop"
        android:text="Dropoff address"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tvPrice"
        android:text="0 FCFA"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnAccept"
        android:text="Accepter"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

</LinearLayout>
