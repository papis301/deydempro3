<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/mapNav"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/stepButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="80dp">

        <Button
            android:id="@+id/btnSurPlace"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Sur place" />

        <Button
            android:id="@+id/btnDemarrer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="DÃ©marrer"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnTerminer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Terminer"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stepButtons1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž Appeler le client" />

    </LinearLayout>

    <TextView
        android:text="Navigation livraison"
        style="@style/Text.Title"
        android:layout_marginBottom="12dp"/>

    <com.google.android.material.card.MaterialCardView
        style="@style/Card.Pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="ðŸ“ En route vers le client"
                style="@style/Text.Subtitle"/>

            <TextView
                android:text="Distance restante : 1.2 km"
                style="@style/Text.Body"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:text="DÃ©marrer"
        style="@style/Button.Primary"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottomsheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <include layout="@layout/bottomsheet_delivery_actions"/>

    </LinearLayout>




</FrameLayout>
