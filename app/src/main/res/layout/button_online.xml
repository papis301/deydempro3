<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_button_uber"
    android:padding="8dp"
    android:visibility="gone">

    <!-- Cercle jaune -->
    <View
        android:id="@+id/circle"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_circle_yellow" />

    <!-- Icône flèche -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@id/circle"
        android:layout_marginStart="15dp"
        android:src="@android:drawable/ic_media_next"
        app:tint="@android:color/black" />

    <!-- Texte -->
    <TextView
        android:id="@+id/textOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passer en ligne"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/uber_yellow"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/circle"
        android:layout_marginStart="20dp"/>

</RelativeLayout>