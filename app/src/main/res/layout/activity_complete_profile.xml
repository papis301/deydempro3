<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F2F4F7"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- PHOTO PROFIL -->
                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_user"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle"
                    android:padding="4dp"
                    android:clickable="true"/>

                <!-- NOM -->
                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="Nom complet"
                    android:padding="14dp"
                    android:background="@drawable/bg_input"/>

                <!-- VEHICULE -->
                <Spinner
                    android:id="@+id/spVehicleType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

                <!-- ================= DOCUMENTS ================= -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carte d'identité (Recto / Verso)"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <ImageView android:id="@+id/imgIdFront" style="@style/DocImage"/>
                <ImageView android:id="@+id/imgIdBack" style="@style/DocImage"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permis (Recto / Verso)"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <ImageView android:id="@+id/imgPermitFront" style="@style/DocImage"/>
                <ImageView android:id="@+id/imgPermitBack" style="@style/DocImage"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carte grise (Recto / Verso)"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <ImageView android:id="@+id/imgCgFront" style="@style/DocImage"/>
                <ImageView android:id="@+id/imgCgBack" style="@style/DocImage"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photos du véhicule"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <ImageView android:id="@+id/imgVeh1" style="@style/DocImage"/>
                <ImageView android:id="@+id/imgVeh2" style="@style/DocImage"/>
                <ImageView android:id="@+id/imgVeh3" style="@style/DocImage"/>
                <ImageView android:id="@+id/imgVeh4" style="@style/DocImage"/>

                <!-- BOUTON -->
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="24dp"
                    android:text="Valider"
                    android:textAllCaps="false"
                    android:backgroundTint="#1E88E5"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
