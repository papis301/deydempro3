<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DeyDemPro3" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Couleurs -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/primary_variant</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>

        <!-- Text -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="Theme.DeyDemPro3" parent="Base.Theme.DeyDemPro3" />

    <!-- Texte par défaut -->
    <style name="Text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Forme par défaut -->
    <style name="Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Card.Pro" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">6dp</item>
        <item name="shapeAppearanceOverlay">@style/Shape.Rounded</item>
    </style>

    <style name="Shape.Rounded">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="DocImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">#E0E0E0</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:clickable">true</item>
    </style>


</resources>